<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context=".ui.ModelMainActivity">    <Button        android:id="@+id/main_activity_button_cancel"        android:layout_width="match_parent"        android:layout_height="75dp"        android:layout_alignParentTop="true"        android:background="@color/colorAccent"        android:gravity="center"        android:text="Cancel Transaction" />    <LinearLayout        android:id="@+id/main_activity_bottom"        android:layout_width="match_parent"        android:layout_height="75dp"        android:layout_alignParentBottom="true"        android:orientation="horizontal">        <Button            android:id="@+id/main_activity_button_next"            android:layout_width="match_parent"            android:layout_height="75dp"            android:layout_weight="1"            android:background="@color/colorNext"            android:gravity="center"            android:text="Next" />        <Button            android:id="@+id/main_activity_button_ok"            android:layout_width="match_parent"            android:layout_height="75dp"            android:layout_weight="1"            android:background="@color/colorOk"            android:gravity="center"            android:text="Ok" />    </LinearLayout>    <TextView        android:id="@+id/main_activity_status"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_above="@+id/main_activity_bottom"        android:layout_below="@+id/main_activity_button_cancel"        android:gravity="center"        android:text="Hello World!"        android:textColor="@color/colorPrimaryDark"        android:textSize="24sp"        android:textStyle="bold" /></RelativeLayout>